                        text: ""
                    Label:
                        id: client_demail
                        text: ""
                    Label:
                        id: client_phone
                        text: ""
                    Label:
                        id: client_addr
                        text: ""
                    Label:
                        id: client_usertype
                        text: ""

        TabbedPanelItem:
            text: "See Classes"
            text_size: self.size
            GridLayout:
                cols: 1
                rows: 2
                GridLayout:
                    cols: 5
                    rows: 1
                    size_hint_y: 0.04
