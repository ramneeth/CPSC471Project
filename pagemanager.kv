<ModifySuppliesPopup>:
    title: "Modify Supplies"
    size_hint: (None, None)
    size: (400,400)
    supplyno: supplyno
    supplyname: supplyname
    stock: stock
    FloatLayout:
        Label:
            pos_hint: {'x': 0.15, 'center_y':0.9}
            size_hint: 0.7,0.08
            text: "Supply No."
        TextInput:
            id: supplyno
            pos_hint: {'x': 0.1, 'center_y':0.8}
            size_hint: 0.8, 0.1
            multiline: False
        Label:
            # pos_hint: {'x': 0.15, 'center_y':0.3}
            pos_hint: {'x': 0.15, 'center_y':0.7}
            size_hint: 0.7,0.08
            text: "Supply Name (Only when adding)"
        TextInput:
            id: supplyname
            # pos_hint: {'x': 0.1, 'center_y':0.2}
            pos_hint: {'x': 0.1, 'center_y':0.6}
            size_hint: 0.8, 0.1
            multiline: False
        Label:
            pos_hint: {'x': 0.15, 'center_y':0.5}
            size_hint: 0.7,0.08
            text: "Stock"
        TextInput:
            id: stock
            # pos_hint: {'x': 0.1, 'center_y':0.2}
            pos_hint: {'x': 0.1, 'center_y':0.4}
            size_hint: 0.8, 0.1
            multiline: False
        GridLayout:
            cols: 2
            rows: 1
            size_hint_y: 0.1
            pos_hint: {'center_x':0.5, 'center_y':0.05}
            Button:
                text: "Add Supply"
                size_hint: 0.25, 0.2
                on_release: root.addSupply()
            Button:
                text: "Update Supply Stock"
                size_hint: 0.25, 0.2
                on_release:
                    root.updateSupply()

<ModifySchedulePopup>:
    title: "Modify Schedule"
    size_hint: (None, None)
    size: (400,400)
    r_email: r_email
    FloatLayout:
        Label:
            pos_hint: {'x': 0.15, 'center_y':0.9}
            size_hint: 0.7,0.08
            text: "Employee E-mail"
        TextInput:
            id: r_email
            pos_hint: {'x': 0.1, 'center_y':0.8}
            size_hint: 0.8, 0.1
            multiline: False
        Label:
            pos_hint: {'x': 0.15, 'center_y':0.7}
            size_hint: 0.7,0.08
            text: "Date"
        GridLayout:
            cols: 7
            rows: 1
            size_hint: 1, 0.1
            pos_hint: {'x':0,'center_y':0.6}
            Button:
                text: "Sun"
                on_release: root.date = "Sunday"
            Button:
                text: "Mon"
                on_release: root.date = "Monday"
            Button:
                text: "Tues"
                on_release: root.date = "Tuesday"
            Button:
                text: "Wed"
                on_release: root.date = "Wednesday"
            Button:
                text: "Thurs"
                on_release: root.date = "Thursday"
            Button:
                text: "Fri"
                on_release: root.date = "Friday"
            Button:
                text: "Sat"
                on_release: root.date = "Saturday"
        # TextInput:
        #     id: date
        #     pos_hint: {'x': 0.1, 'center_y':0.5}
        #     size_hint: 0.8, 0.1
        #     multiline: False
        Label:
            pos_hint: {'x': 0.15, 'center_y':0.5}
            size_hint: 0.7,0.08
            text: "Time slot"
        # TextInput:
        #     id: duration
        #     pos_hint: {'x': 0.1, 'center_y':0.4}
        #     size_hint: 0.8, 0.1
        #     multiline: False
        GridLayout:
            cols: 4
            rows: 1
            size_hint: 1, 0.1
            pos_hint: {'x':0,'center_y':0.4}
            Button:
                text: "6-10"
                on_release: root.time_slot = "6-10"
            Button:
                text: "10-2"
                on_release: root.time_slot = "10-2"
            Button:
                text: "2-6"
                on_release: root.time_slot = "2-6"
            Button:
                text: "6-12"
                on_release: root.time_slot = "6-12"
        GridLayout:
            cols: 2
            rows: 1
            size_hint_y: 0.1
            pos_hint: {'center_x':0.5, 'center_y':0.05}
            Button:
                text: "Add Timeslot"
                size_hint: 0.25, 0.2
                on_release:
                    root.addTimeSlot()
            Button:
                text: "Remove Timeslot"
                size_hint: 0.25, 0.2
                on_release:
                    root.removeTimeSlot()


