    schedulesun: schedulesun
    schedulemon: schedulemon
    scheduletues: scheduletues
    schedulewed: schedulewed
    schedulethurs: schedulethurs
    schedulefri: schedulefri
    schedulesat: schedulesat
    # subscription: subscription
    client_email: client_email
    client_fname: client_fname
    client_lname: client_lname
    client_demail: client_demail
    client_phone: client_phone
    client_addr: client_addr
    client_usertype: client_usertype
    user_fname: user_fname
    user_lname: user_lname
    user_email: user_email
    user_phone: user_phone
    user_addr: user_addr

    Button:
        text: "Logout"
        font_size: (root.width**2 + root.height**2) / 15**4
        pos_hint: {"x":0.002,"top":1}
        size_hint: 0.15, 0.1
        on_release: 
            root.logout()
            app.root.current = "login"
            root.manager.transition.direction = "up"

    TabbedPanel:
        size_hint: 1, 0.9
        pos_hint: {'x': 0, 'top':0.9}
        tab_width: root.width / 7
        do_default_tab: False
        TabbedPanelItem:
            text: "Account Info"
            text_size: self.size
            FloatLayout:
                GridLayout:
                    pos_hint: {"center_x":0.5,"center_y":0.65}
                    cols: 3
                    rows: 1
                    size_hint_y: 0.6
                    padding: [0,0]
                    GridLayout:
                        cols: 1
                        rows: 5
                        size_hint_y: 0.5
                        size_hint_x: 0.3
                        
                        Label:
                            id: user_fname
                            text: "First Name:"
                        Label:
                            id: user_lname
                            text: "Last Name:"
                        Label:
                            id: user_email
                            text: "Email:"
                        Label:
                            id: user_phone
                            text: "Phone:"
                        Label:
                            id: user_addr
                            text: "Home Address:"
        TabbedPanelItem:
            text: "Admin Control Panel"
            text_size: self.size
            FloatLayout:
                Label:
                    text: "Email of User:"
                    pos_hint: {"center_x": 0.215, "center_y":0.775}
                TextInput:
                    id: client_email
                    font_size: (root.width**2 + root.height**2) / 14**4
                    pos_hint: {"center_x": 0.5, "center_y":0.7}
                    size_hint: 0.7,0.1
                    multiline: False
                GridLayout:
                    cols: 4
                    rows: 2
                    spacing: [0.01, 0]
                    pos_hint: {"center_x": 0.5, "center_y":0.570}
                    size_hint: 0.7, 0.15
                    Button:
                        text: "Add Client"
                        on_release: root.moveToClient()
                    Button:
                        text: "Remove Client"
                        on_release: root.removeClient()
                    Button:
                        text: "Add Member"
                        on_release: root.moveToMember()
                    Button:
                        text: "Remove Member"
                        on_release: root.removeMember()
                    Button:
                        text: "Add Employee"
                        on_release: root.moveToEmployee()
                    Button:
                        text: "Remove Employee"
                        on_release: root.removeEmployee()
                    Button:
                        text: "Add Admin"
                        on_release: root.moveToAdmin()
                    Button:
                        text: "Remove Admin"
                        on_release: root.removeAdmin()
                GridLayout:
                    cols: 1
                    rows: 1
                    pos_hint: {"center_x": 0.5, "center_y":0.445}
                    size_hint: 0.7, 0.1
                    Button:
                        text: "Display Info for User"
                        on_release: root.getClientAccountInfo()
                GridLayout:
